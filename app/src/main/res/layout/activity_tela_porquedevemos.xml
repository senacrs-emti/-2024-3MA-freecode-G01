<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tela_porquedevemos">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textituloPQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:padding="14dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:text="POR QUE DEVEMOS FAZER TERAPIA?" />

            <TextView
                android:id="@+id/textPQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="20dp"
                android:justificationMode="inter_word"
                android:text="A terapia é tão essencial para o nosso bem-estar quanto pensamos, por meio da terapia é possível nos conhecer de uma forma mais profunda e saudável, como resolver e acolher sentimentos difíceis, comportamentos e hábitos autodestrutivos, relações de convívios e entre outras questões pessoais. O processo terapêutico é confidencial, nada do que conversado entre o profissional e paciente será comentado a terceiros, a não ser que o paciente esteja correndo risco de vida." />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>